$boxes = $('<%= j render(@products) %>')

$('#products').append( $boxes ).imagesLoaded( function(){
    $('#products').masonry( 'reload');
});
$('a.load-more-products').attr('href', '<%= products_path page: @products.next_page %>');

<% unless @products.next_page %>
  $('a.load-more-products').remove();
<% end %>