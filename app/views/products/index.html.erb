<%= render 'pages/home' unless user_signed_in? %>
<h1 class="center">Recently Tracked Items</h1>




<div id="products" class="transitions-enabled">

  <% @products.each do |product| %>
    <div class="box panel panel-default">
      <%= link_to (image_tag product.imageurl, class: "img-responsive"), product.url %>
      <div class="panel-body">
        <%= product.name %><br />
        <%= product.store.try(:name) %><br />
        <br/><%= number_to_currency(product.price, :unit => "$", :separator => ".") %>
<br/>
        



          <div class="actions">
           <%= link_to edit_product_path(product) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
           
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
