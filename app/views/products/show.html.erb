        <div class="container">
        <p id="notice"><%= notice %></p>

        
        <h1>
          <%= @product.name %>
        </h1>

        <p>
          <%= @product.description %>
        </p>

      
        <h3>
           <strong>Currently:</strong>
          <%= number_to_currency(@product.price, :unit => "$", :separator => ".") %>  
          </h3>
          <h4>From: <%= link_to @product.store.name, "http://"+@product.store.url, target: "_blank" %>
        </h4>


        <p>
          
          <%= link_to (image_tag @product.imageurl, class: "img-responsive"), @product.url,  target: "_blank" %>
        </p>

        <p>
          
      

          <%= link_to "Shop Now", @product.url, class: "btn btn-primary" %>
        </p>

       

        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>
</div>
<% if @product.product_price_updates.length > 0 %>
<table class='table' style="width:80%;margin: 0px auto">
  <caption><h2>History</h2></caption>
  <thead>
    <tr>
      <th>Time</th>
      <th>Previous Price</th>
      <th>Latest Price</th>
    </tr>
  </thead>
  <tbody>
    <% @product.product_price_updates.each do |price_update| %>
      <tr>
        <td><%= price_update.created_at.to_s(:long) %></td>
        <td><%= price_update.previous_price %></td>
        <td><%= price_update.updated_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
