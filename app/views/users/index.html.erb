
<% @title = 'Available Users - Marla Knows' %>
<div class="container">
  



 <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
                <h1>Users</h1>

      </div>
    </div>
    <div class="panel-body">
      <div class="jumbotron">
        <%= search_form_for @search do |f| %>
          <div class="form-group">
            <%= f.label :name_cont, "Find A User", class: "text-left" %>
            <%= f.text_field :name_cont, class: "form-control search-field" %>
          </div>
          <div class="form-group text-left">
            <%= f.submit "Search", class: "btn btn-lg btn-primary"%> <%= f.submit "Clear", :name => nil, :id => :q_reset, class: "btn btn-lg btn-default" %>
          </div>
        <% end %>
      </div>
                <div class="table-responsive">
                <table class="table table-striped">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  
                  <% if user_signed_in? && current_user.admin? %>
                  <th>Role</th>
                  <th>Status</th>
                      <th></th>
                      <th></th>
                      <th></th>
                  <% end %>
                </tr>
                </thead>

                <tbody>
                <% @users.each do |user| %>
                    <tr>
                      <td><%= link_to user.name, user if user.name %></td>
                      <td><%= user.email %></td>
                      
                      <% if user_signed_in? && current_user.admin? %>
                      <td><%= user.role %></td>
                      <td><%= user.status %></td>
                        <td><%= link_to 'Show', user, class: 'btn btn-success' %></td>
                        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success' %></td>
                        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
                      <% end %>
                    </tr>
                <% end %>
                </tbody>
              </table>
              </div>

    </div>
    <div class="panel-footer">

                <br>
                <% if user_signed_in? && current_user.admin? %>
                <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
              <% end %>

    </div>
  </div>

</div>



