
<% @title = 'Available Users - Marla Knows' %>
<div class="container">
  <h1>Users using marla</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <% if user_signed_in? && current_user.admin? %>
          <th></th>
          <th></th>
          <th></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user if user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <% if user_signed_in? && current_user.admin? %>
            <td><%= link_to 'Show', user, class: 'btn btn-success' %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success' %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>

<br>
<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
<% end %>