<%= form_for @pin, html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



 <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control" %>
  </div>



  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  
  <div class="form-group" style="display:none;">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

 <div class="form-group">
<%= collection_select(:pin, :store_id, Store.all, :id, :url, {:prompt=> "Select A Store"}, {:class => "form-control"} ) %>
</div>

<div class="form-group">
<%= collection_select(:pin, :product_id, Product.all, :id, :url, {:prompt=> "Select A Product"}, {:class => "form-control"} ) %>
</div>




  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>